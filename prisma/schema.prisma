// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  email        String         @unique
  authId       String?
  password     String?
  description  String?
  name         String?
  experiences  Experience[]  
  eduications  Education[]
  opportinuities Opportunity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  companyName String
  title String @default("No Title Available")
  workFrom    String?
  workTo      String?
  tasks       String?
  location    String?
  tools   String?
  userId      String  @db.ObjectId
  user        User    @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Education {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  instituteName String
  studyFrom     String?
  studyTo       String?
  subject         String
  location      String?
  userId        String  @db.ObjectId
  user          User    @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Opportunity {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  companyName   String
  jobTitle      String
  jobDescription String
  match         Int
  coverLetter   String
  userId        String @db.ObjectId
  user          User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
